<!doctype html>
<html>
  <head>
    <title>Weather Forecast</title>
    <link rel="stylesheet" type="text/css" href="/main.css" />
  </head>
  <body>
    <h1>Weather Forecast</h1>

    <form action="/weather/search" method="GET">
      <p>Enter a city name to get the current weather:</p>
      <input type="text" name="city" placeholder="e.g. London" required>
      <input type="submit" value="Get Forecast">
    </form>

    <br>

    
    <% if (error) { %>
      <p style="color: red; font-weight: bold;"><%= error %></p>
    <% } %>

    <% if (weather) { %>
      <div style="border: 1px solid #ccc; padding: 15px; border-radius: 5px; width: 300px;">
        <h2><%= weather.name %>, <%= weather.sys.country %></h2>
        
        <p><strong>Temperature:</strong> <%= weather.main.temp %>&#8451;</p>
        <p><strong>Humidity:</strong> <%= weather.main.humidity %>%</p>
        <p><strong>Wind Speed:</strong> <%= weather.wind.speed %> m/s</p>
        <p><strong>Description:</strong> <%= weather.weather[0].description %></p>
      </div>
    <% } %>
    
    <p><a href="/">Back to Home</a></p>
  </body>
</html>